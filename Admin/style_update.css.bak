@import url('https://fonts.googleapis.com/css2?family=Exo+2:wght@600&display=swap');
*{
  box-sizing: border-box;
  margin: 0;
  padding: 0;
  font-family: 'Exo 2', sans-serif;
}

body {
  width: 100%;
  background: linear-gradient(45deg, #9cdbff, #007aff, #000097);
  display: flex;
  align-items: center;
  justify-content: center;
}

input[type="number"]::-webkit-inner-spin-button,
  input[type="number"]::-webkit-outer-spin-button {
    -webkit-appearance: none;
    margin: 0;
  }
  
  input[type="number"] {
    -moz-appearance: textfield;
  }

input{
    border: none;
    font-size: 15px;
    padding-left: 10px;
}

input:focus{
    outline: none;
}

:placeholder-shown{
    font-size: 16px;
}

.Update_form_section{
    width: 100vw;
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
}

.container{
    width: 90%;
    min-width: 700px;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: rgba(201, 201, 201, 0.336);
    padding: 10px 20px 50px 20px;
    margin-top: 20px;
    margin-bottom: 20px;
    border-radius: 20px;
}

h2{
	text-align:center;
	margin-bottom:10px;
}

table {
    width: 100%;
    border-collapse: collapse;
  }
  
  th, td {
    padding: 5px;
    text-align: center;
    font-size: 17px;
  }

  .td_label{
    width: 200px;
    height: 50px;
    text-align: left;
  }

  .td_address label{
    position: relative;
    top: -50px;
    left: -60px;
  }

.add_table input{
    height: 40px;
    border-radius: 10px;
}

.name_td input{
    width: 200px;
    height: 40px;
  }

.name_td input:focus{
    border: 2px solid rgb(0, 34, 146);
}

.td_input input{
    width: 430px;
}

.td_input input:focus{
    border: 2px solid rgb(0, 34, 146);
}

.td_add_btn input{
    width: 300px;
    margin-top: 50px;
    background-color: white;
    border: 2px solid rgb(0, 34, 146);
    color: rgb(0, 34, 146);
    font-size: 20px;
}

.td_add_btn input:hover{
    background-color: rgb(0, 34, 146);
    color: rgb(255, 255, 255);
}

  .view_table{
    margin-top: 50px;
  }

  .view_table td{
    height: 75px;
    width: 150px;
    padding: 0;
   padding-left: 5px;
  }
  
  .view_table th {
    background-color: #271313;
    color: white;
    height: 60px;
    width: 120px;
    padding: 0;
   padding-left: 5px;
  }
  
  .view_table td {
    border-bottom: 1px solid #ddd;
  }
  
  .view_table tr:nth-child(even) {
    background-color: #c9c9c9;
  }

  .view_table tr:nth-child(odd) {
    background-color: #ffffff;
  }

  .btn button{
    margin-top: 50px;
    width: 100px;
    height: 35px;
    border: 2px solid black;
    border-radius: 10px;
  }

  #btn_update{
    background-color: rgb(255, 255, 255);
    background-image: url('update.png');
    background-repeat: no-repeat;
    background-position: center center;
    background-size: 25% auto;;
    cursor: pointer;
    margin-right: 20px;

  }

  #btn_update:hover{
    background-color: #03ac13;
    background-image: url('update2.png');
    background-repeat: no-repeat;
    background-position: center center;
    background-size: 25% auto;
    border: none;
  }

  #btn_cancel{
    border: none;
    background-color: rgb(255, 255, 255);
    cursor: pointer;
    background-image: url('cancel2.png');
    background-repeat: no-repeat;
    background-position: center center;
    background-size: 25% auto;
    border: 2px solid black;
    margin-left: 20px;
  }

  #btn_cancel:hover{
    background-color: #ff0000;
    background-image: url('cancel.png');
    background-repeat: no-repeat;
    background-position: center center;
    background-size: 25% auto;
    border: none;
  }
